{
  "name": "webdriverio-automated-testing",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@wdio/allure-reporter": "^9.19.2",
    "@wdio/appium-service": "^9.19.2",
    "@wdio/browserstack-service": "^9.19.2",
    "@wdio/cli": "^9.19.2",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "appium": "^3.0.2",
    "appium-uiautomator2-driver": "^5.0.3",
    "appium-xcuitest-driver": "^10.1.2",
    "chai": "^6.0.1",
    "allure-commandline": "^2.34.1",
    "eslint-plugin-wdio": "^9.16.2"
  },
  "scripts": {
    "test:android": "wdio run src/config/wdio.android.app.config.js",
    "test:ios": "wdio run src/config/wdio.ios.app.config.js",
    "appium": "appium",
    "allure:generate": "allure generate --clean ./allure-results -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "report:android": "pnpm run test:android ; pnpm run allure:generate ; pnpm run allure:open",
    "report:ios": "pnpm run test:ios ; pnpm run allure:generate ; pnpm run allure:open"
  }
}
